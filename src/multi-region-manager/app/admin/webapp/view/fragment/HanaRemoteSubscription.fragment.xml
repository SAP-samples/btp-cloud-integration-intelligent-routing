<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<Dialog title="Change Remote Subscription" class="sapUiContentPadding">
		<content>		
			<l:VerticalLayout>
			<MessageStrip hideCloseButton="true" enableFormattedText="true"
				text="Please note that this action may cause a temporary interruption to our services &lt;br&gt;Are you sure you want to proceed?" 
				design="Warning">
			</MessageStrip>
			<f:SimpleForm>
					<Label text="Region"/>
					<Select id="hanaRegion"  items="{config>/regionNames}" forceSelection="true" >
						<core:ListItem key="{config>key}" text="{config>value}" icon="sap-icon://building"/>
					</Select>
					<Label text="Subscription"/>
					<Select id="hanaAction" forceSelection="true" >
						<core:ListItem key="create" text="Create" icon="sap-icon://create-form"/>
						<core:ListItem key="delete" text="Delete" icon="sap-icon://delete"/>
					</Select>
					<TextArea id="hanaNotes" value="{appView>/notes}" width="100%" placeholder= "Add note (optional)"/>
			</f:SimpleForm>
			</l:VerticalLayout>
			</content>
			<beginButton>
				<Button text="Ok" press="onOk" />
			</beginButton>
			<endButton>
				<Button text="Cancel" press="onCancel" />
			</endButton>
		</Dialog>
	</core:FragmentDefinition>