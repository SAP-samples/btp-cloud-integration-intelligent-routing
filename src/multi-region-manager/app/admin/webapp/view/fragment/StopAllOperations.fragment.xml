<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<Dialog title="Stop Operations" class="sapUiContentPadding">
		<content>		
			<l:VerticalLayout>
			<MessageStrip hideCloseButton="true" enableFormattedText="true"
				text="Please take note that this action &lt;strong&gt;suspends&lt;/strong&gt; all external traffic and asynchronous message consumption. &lt;br&gt;Are you sure you want to proceed?" 
				design="Warning">
			</MessageStrip>
			<TextArea id="stopAllOperationsNotes" value="{appView>/notes}" width="100%" placeholder= "Add note (optional)"/>
			</l:VerticalLayout>
			</content>
			<beginButton>
				<Button text="Ok" press="onOk" />
			</beginButton>
			<endButton>
				<Button text="Cancel" press="onCancel" />
			</endButton>
		</Dialog>
	</core:FragmentDefinition>