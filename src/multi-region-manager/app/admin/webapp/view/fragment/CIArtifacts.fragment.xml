<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<Dialog title="Cloud Integration Artifacts" class="sapUiContentPadding">
		<content>		
			<l:VerticalLayout>
			<MessageStrip hideCloseButton="true" enableFormattedText="true"
				text="Please note that this action may cause a temporary interruption to our services &lt;br&gt;Are you sure you want to proceed?" 
				design="Warning">
			</MessageStrip>
			<f:SimpleForm>
					<Label text="Region"/>
					<Select id="ciRegion" items="{config>/regionNames}" forceSelection="true" >
						<core:ListItem key="{config>key}" text="{config>value}" icon="sap-icon://building"/>
					</Select>
					<Label text="Package Ids"/>
					<TextArea id="ciPackageIds" width="100%" placeholder= "Specify Package IDs as comma-separated values"/>
					<Label text="Action"/>
					<Select id="ciAction" forceSelection="true" >
						<core:ListItem key="deploy" text="Deploy" icon="sap-icon://create-form"/>
						<core:ListItem key="undeploy" text="Undeploy" icon="sap-icon://delete"/>
					</Select>
					<TextArea id="ciNotes" value="{appView>/notes}" width="100%" placeholder= "Add note (optional)"/>
			</f:SimpleForm>
			</l:VerticalLayout>
			</content>
			<beginButton>
				<Button text="Ok" press="onOk" />
			</beginButton>
			<endButton>
				<Button text="Cancel" press="onCancel" />
			</endButton>
		</Dialog>
	</core:FragmentDefinition>