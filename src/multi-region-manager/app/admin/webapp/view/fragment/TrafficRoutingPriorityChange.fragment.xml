<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<Dialog title="Change routing region" class="sapUiContentPadding">
		<content>		
			<l:VerticalLayout>
			<MessageStrip hideCloseButton="true" enableFormattedText="true"
				text="Please note that this action may cause a temporary interruption to our services &lt;br&gt;Are you sure you want to proceed?" 
				design="Warning">
			</MessageStrip>
			<f:SimpleForm>
					<Label text="Active Region"/>
					<Select id="trafficRegion" items="{config>/regionNames}" forceSelection="true" >
						<core:ListItem key="{config>key}" text="{config>value}" icon="sap-icon://building"/>
					</Select>
					<TextArea id="trafficPriorityNotes" value="{appView>/notes}" width="100%" placeholder= "Add note (optional)"/>
			</f:SimpleForm>
			</l:VerticalLayout>
			</content>
			<beginButton>
				<Button text="Ok" press="onOk" />
			</beginButton>
			<endButton>
				<Button text="Cancel" press="onCancel" />
			</endButton>
		</Dialog>
	</core:FragmentDefinition>